<%- include('header'); %>
<div class = "container">
     <h1 style ="text-align:center ">Add a New Comment to  <%= camps.name %></h1>
   <div style="width:35%; margin:30px auto">
     <form action = "/campground/<%=camps._id%>/comment" method = "post">
        <div class="form-group">
           <textarea class ="form-control" type = "text" placeholder = "comment" name = "comment[text]"></textarea>
        </div>
         <div class="form-group">
           <input class ="form-control" type = "text" placeholder = "your name" name = "comment[author]">
        </div>
       
        <div class="form-group">
           <button class= "btn btn-success btn-lg btn-block" type = "submit">submit</button> 
        </div>
     </form>
     <a href="/campground">Go back</a>
   </div>
</div>
<%- include('footer'); %>